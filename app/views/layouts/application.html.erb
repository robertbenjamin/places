<!doctype html>
<html>
<head>
  <title>Places</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Work+Sans:400,600' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <% if current_user %>
  <ul>
    <li><%= link_to "My Places", user_places_path(current_user) %></li>
    <li><%= link_to "New Place", new_user_place_path(current_user) %></li>
  <ul>
  <div class="login-info">
    Logged in as <%= current_user.username.capitalize %> : 
    <%= link_to "Log Out", logout_path %>
  </div>
  <% else %>
  <ul>
    <li><%= link_to "Home", landing_path %></li>
  </ul>
    <div class="login-info">
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "Log In", login_path %>
    </div>
   <% end %>
  
</nav>

<div class="container">

  <div class="notice"><%= flash[:notice] %></div>

  <%= yield %>

</div>

</body>
</html>
